- if current_user.present?
  .popup-container-account
    .popup-info-account
      %span.triangle-up-account
      %span.popup-closebtn
        %a{:href => "javascript:void(0);"} X
      .content-txtacount
        / popup slider code start
        .middleImgacount
          .item
            - if current_user.present? and current_user.type == 'Patient'
              - if params[:controller] == 'patients' and params[:action] == 'profile'
                %a.waves-effect.waves-teal.black.popupbtn{:href => landing_patients_path, :style => 'padding:5px 25px;width:133px;'} Video Call
              - else
                %a.waves-effect.waves-teal.black.popupbtn{:href => profile_patient_path(:id => current_user.id)} Account      
              - if params[:controller] == 'patients' and params[:action] == 'history'
                %a.waves-effect.waves-teal.black.popupbtn{:href => landing_patients_path, :style => 'padding:5px 25px;width:133px;'} Video Call
              - else
                %a.waves-effect.waves-teal.black.popupbtn{:href => history_patient_path(:id => current_user.id), :style => 'padding:5px 39px;'} History
            - elsif current_user.present? and current_user.type == 'Doctor'
              - if params[:controller] == 'doctors' and params[:action] == 'profile'
                %a.waves-effect.waves-teal.black.popupbtn{:href => video_chats_path, :style => 'padding:5px 25px;width:133px;'} Video Call
              - else
                %a.waves-effect.waves-teal.black.popupbtn{:href => profile_doctor_path(:id => current_user.id)} Account      
              - if params[:controller] == 'doctors' and params[:action] == 'history'
                %a.waves-effect.waves-teal.black.popupbtn{:href => video_chats_path, :style => 'padding:5px 25px;width:133px;'} Video Call
              - else
                %a.waves-effect.waves-teal.black.popupbtn{:href => history_doctor_path(:id => current_user.id), :style => 'padding:5px 39px;'} History
        / popup slider code end